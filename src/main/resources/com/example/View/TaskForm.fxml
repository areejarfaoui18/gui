<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.Controller.TaskFormController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10"
          padding="20">

    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="titleTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="deadlineTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Save" onAction="#saveTask" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button text="Cancel" onAction="#cancel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
