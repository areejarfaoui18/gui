<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.Controller.SignUpPageController">

    <!-- Text Manager -->
    <Label fx:id="textManagerLabel" layoutX="10.0" layoutY="10.0" text="Text Manager">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- Go Back Button -->
    <Button fx:id="goBackButton" layoutX="10.0" layoutY="40.0" onAction="#handleGoBack" text="Go Back" />

    <!-- SIGN IN Title -->
    <Label fx:id="signInTitleLabel" layoutX="265.0" layoutY="50.0" text="SIGN UP" textFill="#ea738d">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <!-- Username Label -->
    <Label fx:id="usernameLabel" layoutX="200.0" layoutY="120.0" text="Username:" textFill="#89abe3">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <!-- Username TextField -->
    <TextField fx:id="usernameTextField" layoutX="290.0" layoutY="120.0" prefHeight="25.0" prefWidth="200.0" />

    <!-- Password Label -->
    <Label fx:id="passwordLabel" layoutX="200.0" layoutY="160.0" text="Password:" textFill="#89abe3">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <!-- Password TextField -->
    <PasswordField fx:id="passwordField" layoutX="290.0" layoutY="160.0" prefHeight="25.0" prefWidth="200.0" />

    <!-- Sign In Button -->
    <Button fx:id="signUpButton" layoutX="450.0" layoutY="200.0" text="SIGN UP" onAction="#handleSignUp" />

</AnchorPane>
