<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="400" prefWidth="600"
            xmlns:fx="http://javafx.com/javafx/1" fx:controller="com.example.Controller.SignInPageController">

   <!-- Text Manager -->
   <Label fx:id="textManagerLabel" layoutX="10.0" layoutY="10.0" text="Text Manager">
      <font>
         <Font size="18.0"/>
      </font>
   </Label>

   <!-- Go Back Button -->
   <Button fx:id="goBackButton" layoutX="10.0" layoutY="40.0" text="Go Back" onAction="#handleGoBack"/>

   <!-- SIGN IN Title -->
   <Label fx:id="signInTitleLabel" layoutX="265.0" layoutY="50.0" text="SIGN IN">
      <font>
         <Font size="24.0"/>
      </font>
   </Label>

   <!-- Username Label -->
   <Label fx:id="usernameLabel" layoutX="200.0" layoutY="120.0" text="Username:">
      <font>
         <Font size="14.0"/>
      </font>
   </Label>

   <!-- Username TextField -->
   <TextField fx:id="usernameTextField" layoutX="290.0" layoutY="120.0" prefHeight="25.0" prefWidth="200.0"/>

   <!-- Password Label -->
   <Label fx:id="passwordLabel" layoutX="200.0" layoutY="160.0" text="Password:">
      <font>
         <Font size="14.0"/>
      </font>
   </Label>

   <!-- Password TextField -->
   <TextField fx:id="passwordTextField" layoutX="290.0" layoutY="160.0" prefHeight="25.0" prefWidth="200.0"/>

   <!-- Sign In Button -->
   <Button fx:id="signInButton" layoutX="450.0" layoutY="200.0" text="Sign In" onAction="#handleSignIn"/>

   <Button fx:id="signUpButton" layoutX="10.0" layoutY="360.0" text="New here? Click to sign up" onAction="#gotoSignUp">
      <font>
         <Font size="12.0"/>
      </font>
   </Button>


</AnchorPane>
